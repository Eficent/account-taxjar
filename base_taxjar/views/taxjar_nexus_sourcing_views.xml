    <record id="taxjar_nexus_sourcing_form" model="ir.ui.view">
        <field name="name">taxjar.nexus.sourcing.form</field>
        <field name="model">taxjar.nexus.sourcing</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
                <field name="taxjar_id"/>
                <field name="sourcing_type"/>
            </form>
        </field>
    </record>

    <record id="taxjar_nexus_sourcing_tree" model="ir.ui.view">
        <field name="name">taxjar.nexus.sourcing.tree</field>
        <field name="model">taxjar.nexus.sourcing</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="name"/>
                <field name="taxjar_id"/>
                <field name="sourcing_type"/>
            </tree>
        </field>
    </record>

    <record id="taxjar_nexus_sourcing_action" model="ir.actions.act_window">
        <field name="name">TaxJar Nexus</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="res_model">taxjar.nexus.sourcing</field>
        <field name="view_id" ref="taxjar_nexus_sourcing_tree"/>
    </record>

    <menuitem action="taxjar_nexus_sourcing_action" id="menu_taxjar_nexus_sourcing" name="TaxJar Nexus Sourcing" parent="menu_taxjar" sequence="3"/>

</odoo>
