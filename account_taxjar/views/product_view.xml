<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_taxjar_product_tax_code_form" model="ir.ui.view">
        <field name="name">product.tax.code.from</field>
        <field name="model">product.tax.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_taxjar_product_tax_code_tree" model="ir.ui.view">
        <field name="name">product.tax.code.tree</field>
        <field name="model">product.tax.code</field>
        <field name="arch" type="xml">
            <tree string="Product Tax Category">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="account_taxjar_product_tax_code_search" model="ir.ui.view">
        <field name="name">product.tax.code.search</field>
        <field name="model">product.tax.code</field>
        <field name="arch" type="xml">
            <search string="Product Tax Category">
                <field name="name"/>
                <field name="code" string="Product Tax Code"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="account_taxjar_product_tax_code_action" model="ir.actions.act_window">
        <field name="name">Taxjar Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.tax.code</field>
        <field name="view_type">form</field>
        <field name="search_view_id" ref="account_taxjar_product_tax_code_search"/>
        <field name="view_id" ref="account_taxjar_product_tax_code_tree"/>
    </record>

    <menuitem action="account_taxjar_product_tax_code_action" groups="base.group_no_one" id="menu_taxjar_product_tax_code_action" parent="account.account_account_menu" sequence="3"/>

    <record id="product_template_taxjar_inherit_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="taxes_id" position="after">
                <field name="tax_code_id" string="Taxjar Category"/>
            </field>
        </field>
    </record>

    <record id="product_category_view_form_inherit_account_taxjar" model="ir.ui.view">
        <field name="name">product.category.view.form.inherit.account.taxjar</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <group name='first' position="after">
                <group>
                    <group name="sale_taxjar" string="taxjar">
                        <field name="tax_code_id" string="Taxjar Category"/>
                    </group>
                </group>
            </group>
        </field>
    </record>

</odoo>
