<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.taxjar</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="eu_service" position="after">
                <h2>Taxjar</h2>
                <div class="content-group">
                    <div class="row mt16 o_settings_container">
                        <label string="API URL" for="taxjar_api_url" class="col-lg-3 o_light_label"/>
                        <field name="taxjar_api_url" class="oe_inline"/>
                    </div>
                    <div class="row">
                        <label string="API KEY" for="taxjar_api_key" class="col-lg-3 o_light_label" />
                        <field name="taxjar_api_key" class="oe_inline"/>
                    </div>
                    <div class="row">
                        <label string="Default Category" for="tax_code_id" class="col-lg-3 o_light_label"/>
                        <field name="tax_code_id"/>
                        <button name="sync_taxjar_tax_code" type="object" class="btn-link">
                            <span>Import/update product taxes from taxjar<i title="Import/update product taxes from taxjar" role="img" aria-label="Import/update product taxes from taxjar" class="fa fa-refresh fa-fw"></i></span>
                        </button>
                        <button name="sync_taxjar_nexus_region" type="object" class="btn-link">
                            <i title="Import/update product taxes from taxjar" role="img" aria-label="Import/update product taxes from taxjar" class="fa fa-refresh fa-fw"></i>
                        </button>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
